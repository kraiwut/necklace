<% if flash[:notice].present? %>
  <div class="alert alert-info">
    <a class="close" data-dismiss="alert" href="#">×</a>
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert].present? %>
  <div class="alert alert-error">
    <a class="close" data-dismiss="alert" href="#">×</a>
    <%= flash[:alert] %>
  </div>
<% end %>